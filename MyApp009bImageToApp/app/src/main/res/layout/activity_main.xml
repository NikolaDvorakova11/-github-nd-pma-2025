<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Titulek -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editor ObrÃ¡zkÅ¯"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#212121"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cardImage"
        app:layout_constraintVertical_bias="0"
        android:layout_marginBottom="8dp" />

    <!-- ObrÃ¡zek v kartÄ› -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toTopOf="@+id/controlsContainer">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="ObrÃ¡zek k ÃºpravÄ›"
            android:background="#E0E0E0"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />
    </androidx.cardview.widget.CardView>

    <!-- OvlÃ¡dacÃ­ panel -->
    <androidx.cardview.widget.CardView
        android:id="@+id/controlsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/cardImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnTakeImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Vybrat obrÃ¡zek"
                android:backgroundTint="#3F51B5"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp"
                android:padding="10dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Jas -->
            <TextView
                android:id="@+id/tvBrightnessLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jas:"
                android:textColor="#212121"
                android:layout_marginTop="8dp" />

            <SeekBar
                android:id="@+id/seekBarBrightness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="200"
                android:progress="100" />

            <TextView
                android:id="@+id/tvBrightnessValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="#757575"
                android:layout_marginBottom="8dp" />

            <!-- Kontrast -->
            <TextView
                android:id="@+id/tvContrastLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kontrast:"
                android:textColor="#212121"
                android:layout_marginTop="8dp" />

            <SeekBar
                android:id="@+id/seekBarContrast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50" />

            <TextView
                android:id="@+id/tvContrastValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.00x"
                android:textColor="#757575"
                android:layout_marginBottom="12dp" />

            <!-- TlaÄÃ­tka -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnApply"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="âœ¨ PouÅ¾Ã­t Ãºpravy"
                    android:backgroundTint="#009688"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="6dp" />

                <Button
                    android:id="@+id/btnGrayscale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="âš« ÄŒernobÃ­lÃ½"
                    android:backgroundTint="#607D8B"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="6dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>