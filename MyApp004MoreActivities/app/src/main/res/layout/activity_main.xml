<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp"
    >

    <!-- Top Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:title="Hlavní aktivita"
        android:titleTextColor="@color/colorOnPrimary"
        android:elevation="4dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ukázka předání dat do jiné aktivity"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/etNickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vyplňte přezdívku"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/etStartNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Zadejte startovní číslo"
        android:inputType="number"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/etAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Zadejte věk"
        android:inputType="number"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/btnSecondAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Odeslat data"
        android:layout_marginTop="20dp"
        />

</LinearLayout>